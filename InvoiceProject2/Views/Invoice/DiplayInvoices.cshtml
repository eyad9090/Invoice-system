
@{
    ViewBag.Title = "DiplayInvoices";
}

<html>
<head>
</head>
<body>
    @Html.ActionLink("Export pdf", "Reports2", new { ReprotType = "PDF", id = 1 })|
    @Html.ActionLink("Export Word", "Reports2", new { ReprotType = "Word", id = 1 })
    <br />
    <table id="InvoiceData" class="table table-hover ">
        <thead>
            <tr>
                <th>Customer Name</th>
                <th>Invoice Date</th>
                <th>Payment Method</th>
                <th>Desctiption</th>
                <th>Option1</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
    @section scripts
    {
        <script>
            $(document).ready(function () {
                var table = $("#InvoiceData").DataTable({
                    ajax: {
                        "url": "/api/Invoice",
                        "dataSrc": ""
                    },
                    columns: [
                        {
                            data: "Customer",
                        },
                        {
                            data: "InvoiceDate"
                        },
                        {
                            data: "PaymentMethod",
                            render: function (data) {
                                if (data == true)
                                    return "<td>Credit</td>";
                                else
                                    return "<td>Cash</td>";
                            }
                        },
                        {
                            data: "Description",
                        },
                        {
                            data: "InvoiceId",
                            render: function (data) {
                                return "<a href='/Invoice/Details/" + data + "'>Details</a>"
                            }
                        }
                    ]
                });
            });
        </script>

    }
</body>
</html>

